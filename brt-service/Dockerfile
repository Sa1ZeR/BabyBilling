FROM openjdk:17

ARG PRODUCT_NAME=callgenerator
ARG USER_UID=1001
ARG USER_GID=1001
ARG USER_NAME=$PRODUCT_NAME
ARG USER_GROUP=$PRODUCT_NAME
ARG USER_HOME=/home/$USER_NAME

RUN microdnf clean all && \
        rm -rf /var/cache/yum/* && \
        rm -rf ~/.cache/ && \
        rm -rf /tmp/* && \
        groupadd --gid $USER_GID $USER_GROUP && \
        useradd --create-home \
                --shell /bin/bash \
                --uid $USER_UID \
                --gid $USER_GROUP \
                --home $USER_HOME $USER_NAME && \
        chown -R $USER_NAME:$USER_GROUP $USER_HOME

USER $USER_NAME
WORKDIR $USER_HOME

ARG JAR_FILE=./build/libs/brt-service-0.0.1-SNAPSHOT.jar
ENV JAR_FILE ${JAR_FILE}

ENV SERVER_PORT=3002
ENV EUREKA_HOST=http://localhost:3000/eureka
ENV KAFKA_BOOTSTRAP_SERVERS=localhost:9092
ENV REDIS_HOST=localhost
ENV REDIS_PORT=6379
ENV POSTGRES_HOST=localhost
ENV POSTGRES_PORT=5432
ENV POSTGRES_DB:bootcamp24
ENV POSTGRES_NAME:postgres
ENV POSTGRES_PASSWORD:123456

EXPOSE ${SERVER_PORT}

COPY --chown=$USER_NAME:$USER_GROUP ${JAR_FILE} app.jar

ENTRYPOINT ["java","-jar","app.jar", "SERVER_PORT=${SERVER_PORT}", "EUREKA_HOST=${EUREKA_HOST}", "KAFKA_BOOTSTRAP_SERVERS=${KAFKA_BOOTSTRAP_SERVERS}", "REDIS_HOST=${REDIS_HOST}", "REDIS_PORT=${REDIS_PORT}", "POSTGRES_HOST=${POSTGRES_HOST}", "POSTGRES_PORT=$POSTGRES_PORT", "POSTGRES_DB=${POSTGRES_DB}", "POSTGRES_NAME=${POSTGRES_NAME}", "POSTGRES_PASSWORD=${POSTGRES_PASSWORD}"]